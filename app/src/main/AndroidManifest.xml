<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uniroomf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="12" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_uniroom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_uniroom"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniroomF"
        android:usesCleartextTraffic="true">

        <!-- declaring regActivity -->
        <activity android:name=".regActivity"></activity>

        <!-- declaring main activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //roba splash screen
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    />
                <category
                    android:name="android.intent.category.LAUNCHER"
                    />
            </intent-filter>
        </activity>
        //fine roba splash screen

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>

