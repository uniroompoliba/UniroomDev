<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".princStudActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.UniroomF.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            app:navigationIcon="@drawable/abc_vector_test"
            app:popupTheme="@style/Theme.UniroomF.PopupOverlay" />

        <include layout="@layout/content_main" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnNuovaPren"
            android:layout_width="291dp"
            android:layout_height="64dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#50C9FF"
            android:text="Nuova Prenotazione"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titoloPrincStud" />

        <Button
            android:id="@+id/btnModPren"
            android:layout_width="291dp"
            android:layout_height="64dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#50C9FF"
            android:text="Modifica Prenotazione"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNuovaPren" />

        <TextView
            android:id="@+id/titoloPrincStud"
            android:layout_width="352dp"
            android:layout_height="46dp"
            android:layout_marginTop="116dp"
            android:text="Selezionare un'opzione"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>